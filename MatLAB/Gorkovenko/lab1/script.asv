t = [-10 : 1 : 100 ]; %задание массива времени
plot(t,f(t,16,5));  % отрисовка графика функции
grid on;    % включить отображение сетки на графике
t_max = max(t); % находим максимальное значение в массиве
t_min = min(t); % -\\- минимальное
xlim([t_min,t_max]); % ограничение отрисовки графика по оси Х

d=f(t,16,5); % формируем данные для фильтра
figure;
plot(t,rec_filter(d,5,5,16)); % построение графика ф
xlim([t_min,t_max]);